<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_layout"
    style="@style/Widget.DataReport.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:theme="@style/Theme.DataReport.AppWidgetContainer">

    <RelativeLayout
        style="@style/Widget.DataReport.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/information_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/appwidget_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/appwidget_text"
                android:text="@string/zero_bytes"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/appwidget_text"
                android:layout_alignBottom="@id/appwidget_text"
                android:layout_alignParentEnd="false"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/appwidget_text"
                android:clickable="true"
                android:contentDescription="@string/reload"
                android:focusable="true"
                android:minWidth="28sp"
                android:minHeight="28sp"
                android:visibility="gone"
                android:src="@android:drawable/stat_notify_sync"
                app:srcCompat="@android:drawable/stat_notify_sync" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/information_wrapper"
            android:layout_alignStart="@id/information_wrapper"
            android:layout_alignEnd="@id/information_wrapper"
            android:scaleY="2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar">

            <TextView
                android:id="@+id/update_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_updated"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>