<resources>
    <!-- Base application theme. -->
    <style name="Theme.DataMeasure" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryColor</item>
    </style>

    <style name="Theme.DataMeasure.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">2dp</item>
    </style>

    <style name="Theme.DataMeasure.AppWidgetContainer" parent="Theme.DataMeasure.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">4dp</item>
    </style>
</resources>